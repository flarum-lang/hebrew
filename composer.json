    "description": "Hebrew language pack for Flarum.",
    "keywords": ["locale"],
    "license": "MIT",
    "require": {
        "flarum/core": "^1.3"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "flarum-extension": {
            "title": "עברית",
